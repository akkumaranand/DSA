//=================================================================================Q10) Add one to a number represented as Linked List ======================================================================================================================
// =====>>> Brute force code <<=========
Node* addOne(Node* head) {
    // step 1 : reverse the linked list
    Node * start = head;
    Node * previous = NULL;
    while(start!= NULL){
       Node * nextNode = start->next;
       start->next = previous;
       previous = start;
       start = nextNode;
    }
    
    int carry = 1;
    Node * temp = previous;
    while(temp != NULL){
        temp->data = temp->data + carry;
        if(temp->data < 10){
            carry = 0;
            break;
        }else{
            temp->data = 0;
            carry = 1;
        }
        temp = temp->next;
    }
    
    // Now reverse the linked list again 
    Node * revstart = previous;
    Node * prevrev = NULL;
    while(revstart != NULL){
        Node * nextNode = revstart->next;
        revstart->next = prevrev;
        prevrev = revstart;
        revstart = nextNode;
    }

    if(carry){
        Node * newHead = new Node(1);
        newHead->next = prevrev;
        return newHead;
    }
    
    return prevrev ;
}

//=====>>> optimal code <<<=============

// reverse tracking of linked list is only possible with the help of the Recursion 

void addOneToLinkedList(Node * & start , int & carry ){
    if(start == NULL){
        return ;
    }
    
    addOneToLinkedList(start->next , carry);

    start->data = start->data + carry;
    if(start->data < 10){
       carry = 0;
    
    }else{
        carry = 1;
        start->data = 0;
    }

}


Node* addOne(Node* head) {
    int carry = 1;
    Node * start = head;
    addOneToLinkedList(start , carry);
    if(carry){
        Node * NewHead = new Node(1);
        NewHead->next = start;
        return NewHead;
    }
    
    return start;
}

